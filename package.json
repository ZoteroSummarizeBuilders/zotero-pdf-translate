{
  "name": "zotero-summarize",
  "version": "0.0.0",
  "description": "Summarize your PDF files with chatGPT.",
  "config": {
    "addonName": "Summarize for Zotero",
    "addonID": "zoterosummarize@titech.jp",
    "addonRef": "zoteropdfsummarize",
    "prefsPrefix": "extensions.zotero.zoteropdfsummarize",
    "addonInstance": "PDFSummarize",
    "releasepage": "https://github.com/ZoteroSummarizeBuilders/zotero-summarize.git",
    "updaterdf": "https://github.com/ZoteroSummarizeBuilders/zotero-summarize.git"
  },
  "main": "src/index.ts",
  "scripts": {
    "build-dev": "cross-env NODE_ENV=development node scripts/build.mjs",
    "build-prod": "cross-env NODE_ENV=production node scripts/build.mjs",
    "build": "concurrently -c auto npm:build-prod npm:tsc",
    "tsc": "tsc --noEmit",
    "start-watch": "npm run build-dev && concurrently -c auto npm:start npm:watch",
    "start": "node scripts/start.mjs",
    "stop": "node scripts/stop.mjs",
    "restart-dev": "npm run build-dev && npm run stop && npm run start",
    "restart-prod": "npm run build-prod && npm run stop && npm run start",
    "restart": "npm run restart-dev",
    "reload": "npm run build-dev && node scripts/reload.mjs",
    "watch": "chokidar \"src/**\" \"addon/**\" -c \"npm run reload\"",
    "release": "npm run lint && release-it",
    "lint": "prettier --write . && eslint . --ext .ts --fix",
    "update-deps": "npm update --save",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ZoteroSummarizeBuilders/zotero-summarize.git"
  },
  "author": "ZsumB",
  "license": "AGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/ZoteroSummarizeBuilders/zotero-summarize.git"
  },
  "homepage": "https://github.com/ZoteroSummarizeBuilders/zotero-summarize.git",
  "dependencies": {
    "franc": "^6.1.0",
    "iso639-js": "^1.1.3",
    "jsencrypt": "^3.3.2",
    "zotero-plugin-toolkit": "^2.3.9"
  },
  "devDependencies": {
    "@types/node": "^18.18.7",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "chokidar-cli": "^3.0.0",
    "compressing": "^1.10.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "esbuild": "^0.17.19",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^8.10.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "release-it": "^15.11.0",
    "replace-in-file": "^7.0.1",
    "typescript": "^5.2.2",
    "zotero-types": "^1.3.5"
  }
}
